---
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/600.css";
import "@fontsource/rubik";

import "@/styles/base.css";

import { Cursor } from "@/components/cursor";
import Seo from "@/components/seo.astro";

export type Props = {
	title?: string;
	description?: string;
};

const { description = "", title = "" } = Astro.props;
---

<!doctype html>
<html dir="ltr" lang="en" class="selection:bg-foreground selection:text-background scroll-smooth">
	<head>
		<Seo />

		<title>{title}</title>
		<meta name="description" content={description} />
	</head>

	<body class="relative h-screen w-screen cursor-none overflow-hidden bg-[#051124] text-[#beeeff]">
		<div class="bg-crt pointer-events-none absolute top-0 left-0 z-1000 h-screen w-screen"></div>

		<slot />

		<Cursor client:only="" />
	</body>
</html>
